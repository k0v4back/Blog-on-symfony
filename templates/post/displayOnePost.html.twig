{% extends 'home.html.twig' %}

{% block body %}
    <div class="col-md-8">
        <h1 class="my-4">
        </h1>
        <h2>{{ post.title }}</h2>
        <p>{{ post.content| raw }}</p>
        <b>{{ post.createdAt|date("d/m/Y") }}</b>


        <hr>
        <br>


        <div class="">
            <div class="card-body">
                <div class="row">
                    {% for comment in comments %}

                    <div class="col-md-2">
                        <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                        <p class="text-secondary text-center">{{ comment.createdAt|date("F jS \\a\\t g:ia")}}</p>
                    </div>
                    <div class="col-md-10">
                        <p>
                            <strong>{{ comment.userId }}</strong>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>

                        </p>
                        <div class="clearfix"></div>
                        <p>{{ comment.content }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <br>
        <br>
        <b>Comments</b>
        <p></p>

        {{ form_start(form, {'class': 'form-group'}) }}
        {{ form_errors(form) }}

        {{ form_row(form.content, {'attr': {'class': 'form-control', 'type':'text'}, 'label': 'Content'}) }}<p></p>
        <p></p>
        {{ form_row(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Save' }) }}
        {{ form_end(form) }}


        <br>
        <br>
    </div>

{% endblock %}

